<body>
    <%- include ('header.ejs') %>



    <main id="main">
        <div class="main_1 bg-dark shadow">
            <section">
                <ul class="list-group list-group m-3">
                    <a href="dashboard">
                        <li class="list py-2 px-2 small"><span class="menu_icon"><i class="fab fa-squarespace"></i></span>
                            Dashboard </li>
                    </a><br>
                    <a href="sales">
                        <li class="list py-2 px-2 small"><span class="menu_icon"><i class="fas fa-coins"></i></span> Sales
                            Records </li>
                    </a><br>
                    <a href="stocks">
                        <li class="list py-2 px-2 small"><span class="menu_icon"><i class="fas fa-layer-group"></i></span>
                            Stock
                            Records </li>
                    </a><br>
                    <a href="debts">
                        <li class="list py-2 px-2 small"><span class="menu_icon"><i class="fas fa-pen"></i></span> Debts
                            Lists
                        </li>
                    </a><br>
                    <a href="contacts">
                        <li class="list py-2 px-2 small"><span class="menu_icon"><i class="far fa-address-book"></i></span>
                            Contacts Lists </li>
                    </a><br>
                    <!-- <button class="btn btn-primary">
                        <i class="fas fa-receipt"></i>
                        Invoice
                    </button><br> -->
                </ul>
            </section>
        </div>

        <div class="main_2 bg-white">

            <div class="" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
                aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content">
                        <div class="modal-body">
                            <!-- <section id="header">
                        <h1>Syntax Inventory System</h1>
                        </section> -->

                            <section id="invent-form">
                                <div class="invent">
                                    <form id="form">
                                        <div class="d-flexforforms">
                                            <div>
                                                <label>Products</label>
                                                <input type="text" placeholder="product"
                                                    class="form-control form-control-lg" id="product" required>
                                            </div>
                                            <div>
                                                <label>Price</label>
                                                <input type="text" value="0" placeholder="price" id="price"
                                                    class="form-control form-control-lg" onchange="getTotal()" required>
                                            </div>
                                        </div>
                                        <div class="d-flexforforms">
                                            <div>
                                                <label>Quantity</label>
                                                <input type="text" value="0" placeholder="quantity" id="quantity"
                                                    class="form-control form-control-lg" onchange="getTotal()" required>
                                            </div>
                                            <div>
                                                <label>Total</label>
                                                <input type="text" placeholder="0" readonly value="0"
                                                    class="form-control form-control-lg" id="total" required>
                                            </div>
                                        </div>
                                        <br>
                                        <div class="text-center">
                                            <button onclick="addInventory()" class="btn btn-dark">Add
                                                Record</button>
                                        </div>
                                    </form>
                                </div>
                            </section>
                            <div class="" id="allInventory">
                                <table class="table table-bordered border-dark" id="inventoryTable">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Product Name</th>
                                            <th>Price</th>
                                            <th>Quantity</th>
                                            <th>Total</th>
                                            <th>Take Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th colspan="3">
                                                Grand Total
                                            </th>
                                            <td id="grandTotal" colspan="2" class="font-weight-bold"></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <br>
                            <div class="d-flex-between">
                                <div>
                                    <button class="clear btn btn-outline-dark onclick=" clearButton()">Clear
                                        Inventory</button>
                                    <button class="print btn btn-dark" onclick="printData()">Save</button>
                                </div>
                            </div>
                            <br>
                        </div>
                    </div>
                </div>
            </div>

         </div>
         </main> 

            <script src="js/index.js"></script>
            <script src="ress/js/script.js"></script>
            <script src="https://apis.google.com/js/platform.js" async defer></script>
