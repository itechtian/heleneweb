                <script>
                    const recordsalesForm = document.getElementById('recordsales')
                    recordsalesForm.addEventListener('submit', (e) => {
                        e.preventDefault()
                        const customersname = e.target.customersname.value
                        const customersphonenumber = e.target.customersphonenumber.value
                        const itemquantity = e.target.itemquantity.value
                        const unitprice = e.target.unitprice.value
                        const itemname = e.target.itemname.value

